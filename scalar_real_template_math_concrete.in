/* -------------------------------------------------------------------------- */

func (a *SCALAR_NAME) EQUALS(b *SCALAR_NAME, epsilon float64) bool {
#if SCALAR_TYPE == float32 || SCALAR_TYPE == float64
  v1 := a.GetFloat64()
  v2 := b.GetFloat64()
  return math.Abs(v1 - v2) < epsilon               ||
        (math.IsNaN(v1)     && math.IsNaN(v2))     ||
        (math.IsInf(v1,  1) && math.IsInf(v2,  1)) ||
        (math.IsInf(v1, -1) && math.IsInf(v2, -1))
#else
  return a.GET_METHOD_NAME() == b.GET_METHOD_NAME()
#endif
}

/* -------------------------------------------------------------------------- */

func (a *SCALAR_NAME) GREATER(b *SCALAR_NAME) bool {
  return a.GET_METHOD_NAME() > b.GET_METHOD_NAME()
}

/* -------------------------------------------------------------------------- */

func (a *SCALAR_NAME) SMALLER(b *SCALAR_NAME) bool {
  return a.GET_METHOD_NAME() < b.GET_METHOD_NAME()
}

/* -------------------------------------------------------------------------- */

func (a *SCALAR_NAME) SIGN() int {
  if a.GET_METHOD_NAME() < SCALAR_TYPE(0) {
    return -1
  }
  if a.GET_METHOD_NAME() > SCALAR_TYPE(0) {
    return  1
  }
  return 0
}

/* -------------------------------------------------------------------------- */

func (r *SCALAR_NAME) MIN(a, b *SCALAR_NAME) Scalar {
  if a.GET_METHOD_NAME() < b.GET_METHOD_NAME() {
    r.SET(a)
  } else {
    r.SET(b)
  }
  return r
}

/* -------------------------------------------------------------------------- */

func (r *SCALAR_NAME) MAX(a, b *SCALAR_NAME) Scalar {
  if a.GET_METHOD_NAME() > b.GET_METHOD_NAME() {
    r.SET(a)
  } else {
    r.SET(b)
  }
  return r
}

/* -------------------------------------------------------------------------- */

func (c *SCALAR_NAME) ABS(a *SCALAR_NAME) Scalar {
  if c.Sign() == -1 {
    c.NEG(a)
  } else {
    c.SET(a)
  }
  return c
}

/* -------------------------------------------------------------------------- */

func (c *SCALAR_NAME) NEG(a *SCALAR_NAME) *SCALAR_NAME {
  x := a.GetFloat64()
  return c.realMonadic(a, -x, -1, 0)
}

/* -------------------------------------------------------------------------- */

func (c *SCALAR_NAME) ADD(a, b *SCALAR_NAME) *SCALAR_NAME {
  x := a.GetFloat64()
  y := b.GetFloat64()
  return c.realDyadic(a, b, x+y, 1, 1, 0, 0, 0)
}

/* -------------------------------------------------------------------------- */

func (c *SCALAR_NAME) SUB(a, b *SCALAR_NAME) *SCALAR_NAME {
  x := a.GetFloat64()
  y := b.GetFloat64()
  return c.realDyadic(a, b, x-y, 1, -1, 0, 0, 0)
}

/* -------------------------------------------------------------------------- */

func (c *SCALAR_NAME) MUL(a, b *SCALAR_NAME) *SCALAR_NAME {
  x := a.GetFloat64()
  y := b.GetFloat64()
  return c.realDyadic(a, b, x*y, y, x, 1, 0, 0)
}

/* -------------------------------------------------------------------------- */

func (c *SCALAR_NAME) DIV(a, b *SCALAR_NAME) *SCALAR_NAME {
  x := a.GetFloat64()
  y := b.GetFloat64()
  return c.realDyadic(a, b, x/y, 1/y, -x/(y*y), -1/(y*y), 0, 2*x/(y*y*y))
}

/* -------------------------------------------------------------------------- */

func (c *SCALAR_NAME) LOGADD(a, b, t *SCALAR_NAME) *SCALAR_NAME {
  if a.GREATER(b) {
    // swap
    a, b = b, a
  }
  if math.IsInf(a.GetFloat64(), 0) {
    // cases:
    //  i) a = -Inf and b >= a    => c = b
    // ii) a =  Inf and b  = Inf  => c = Inf
    c.SET(b)
    return c
  }
  t.SUB(a, b)
  t.EXP(t)
  t.LOG1P(t)
  c.ADD(t, b)
  return c
}

func (c *SCALAR_NAME) LOGSUB(a, b, t *SCALAR_NAME) *SCALAR_NAME {
  if math.IsInf(b.GetFloat64(), -1) {
    c.SET(a)
    return c
  }
  t.SUB(b, a)
  t.EXP(t)
  t.NEG(t)
  t.LOG1P(t)
  c.ADD(t, a)
  return c
}

/* -------------------------------------------------------------------------- */

func (c *SCALAR_NAME) POW(a, k *SCALAR_NAME) *SCALAR_NAME {
  x := a.GetFloat64()
  y := k.GetFloat64()
  v0 := math.Pow(x, y)
  if k.GetOrder() >= 1 {
    f1 := func() (float64, float64) {
      f10 := math.Pow(x, y-1)*y
      f01 := math.Pow(x, y-0)*math.Log(x)
      return f10, f01
    }
    f2 := func() (float64, float64, float64) {
      f11 := math.Pow(x, y-1)*(1 + y*math.Log(x))
      f20 := math.Pow(x, y-2)*(y - 1)*y
      f02 := math.Pow(x, y-0)*math.Log(x)*math.Log(x)
      return f11, f20, f02
    }
    return c.realDyadicLazy(a, k, v0, f1, f2)
  } else {
    f1 := func() (float64) {
      return math.Pow(x, y-1)*y
    }
    f2 := func() (float64) {
      return math.Pow(x, y-2)*(y - 1)*y
    }
    return c.realMonadicLazy(a, v0, f1, f2)
  }
}

/* -------------------------------------------------------------------------- */

func (c *SCALAR_NAME) SQRT(a *SCALAR_NAME) *SCALAR_NAME {
  x := a.GetFloat64()
  y := 0.5
  v0 := math.Pow(x, y)
  f1 := func() (float64) {
    return math.Pow(x, y-1)*y
  }
  f2 := func() (float64) {
    return math.Pow(x, y-2)*(y - 1)*y
  }
  return c.realMonadicLazy(a, v0, f1, f2)
}

/* -------------------------------------------------------------------------- */

func (c *SCALAR_NAME) EXP(a *SCALAR_NAME) *SCALAR_NAME {
  x := a.GetFloat64()
  v0 := math.Exp(x)
  f1 := func() float64 { return v0 }
  f2 := func() float64 { return v0 }
  return c.realMonadicLazy(a, v0, f1, f2)
}

func (c *SCALAR_NAME) LOG(a *SCALAR_NAME) *SCALAR_NAME {
  x := a.GetFloat64()
  v0 :=  math.Log(x)
  f1 := func() float64 { return  1/x }
  f2 := func() float64 { return -1/(x*x) }
  return c.realMonadicLazy(a, v0, f1, f2)
}

func (c *SCALAR_NAME) LOG1P(a *SCALAR_NAME) *SCALAR_NAME {
  x := a.GetFloat64()
  v0 :=  math.Log1p(x)
  f1 := func() float64 { return  1/ (1+x) }
  f2 := func() float64 { return -1/((1+x)*(1+x)) }
  return c.realMonadicLazy(a, v0, f1, f2)
}
