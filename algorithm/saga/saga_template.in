package saga

/* -------------------------------------------------------------------------- */

#include "../../macros.h"

/* -------------------------------------------------------------------------- */

import   "fmt"
import   "math"
import   "math/rand"

import . "github.com/pbenner/autodiff"

/* -------------------------------------------------------------------------- */

#define OBJECTIVE1 STR_CONCAT(Objective1, SAGA_TYPE)
#define OBJECTIVE2 STR_CONCAT(Objective2, SAGA_TYPE)

#define       GRADIENT_TYPE STR_CONCAT(Gradient,      SAGA_TYPE)
#define CONST_GRADIENT_TYPE STR_CONCAT(ConstGradient, SAGA_TYPE)
#define        IN_SITU_TYPE STR_CONCAT(InSitu,        SAGA_TYPE)

/* -------------------------------------------------------------------------- */

type OBJECTIVE1 func(int, VECTOR_TYPE) (CONST_SCALAR_TYPE, CONST_SCALAR_TYPE, CONST_SPARSE_VECTOR_TYPE, error)
type OBJECTIVE2 func(int, VECTOR_TYPE) (CONST_SCALAR_TYPE, CONST_SPARSE_VECTOR_TYPE, error)

type IN_SITU_TYPE struct {
  T1 VECTOR_TYPE
  T2 SCALAR_TYPE
}

/* -------------------------------------------------------------------------- */

type CONST_GRADIENT_TYPE struct {
  g CONST_SPARSE_VECTOR_TYPE
  w CONST_SCALAR_TYPE
}

func (obj CONST_GRADIENT_TYPE) add(v VECTOR_TYPE) {
  for it := obj.g.ITERATOR(); it.Ok(); it.Next() {
    s_a := v.AT(it.Index())
    s_b := it.GET()
    s_a.SetValue(s_a.GetValue() + obj.w.GetValue()*s_b.GetValue())
  }
}

func (obj CONST_GRADIENT_TYPE) sub(v VECTOR_TYPE) {
  for it := obj.g.ITERATOR(); it.Ok(); it.Next() {
    s_a := v.AT(it.Index())
    s_b := it.GET()
    s_a.SetValue(s_a.GetValue() - obj.w.GetValue()*s_b.GetValue())
  }
}

func (obj *CONST_GRADIENT_TYPE) set(w CONST_SCALAR_TYPE, g CONST_SPARSE_VECTOR_TYPE) {
  obj.g = g
  obj.w = w
}

/* -------------------------------------------------------------------------- */

type GRADIENT_TYPE struct {
  g VECTOR_TYPE
}

func (obj GRADIENT_TYPE) add(v VECTOR_TYPE) {
  for it := obj.g.ITERATOR(); it.Ok(); it.Next() {
    s_a := v.AT(it.Index())
    s_b := it.GET()
    s_a.SetValue(s_a.GetValue() + s_b.GetValue())
  }
}

func (obj GRADIENT_TYPE) sub(v VECTOR_TYPE) {
  for it := obj.g.ITERATOR(); it.Ok(); it.Next() {
    s_a := v.AT(it.Index())
    s_b := it.GET()
    s_a.SetValue(s_a.GetValue() - s_b.GetValue())
  }
}

func (obj *GRADIENT_TYPE) set(g ConstVector) {
  if obj.g != nil {
    obj.g.Set(g)
  } else {
    obj.g = STR_CONCAT(As, VECTOR_NAME)(g)
  }
}

/* -------------------------------------------------------------------------- */

func STR_CONCAT(saga, SAGA_TYPE)(
  f1 OBJECTIVE1,
  f2 OBJECTIVE2,
  n int,
  x Vector,
  gamma Gamma,
  epsilon Epsilon,
  maxIterations MaxIterations,
  proxop ProximalOperator,
  hook Hook,
  seed Seed,
  inSitu *IN_SITU_TYPE) (Vector, error) {

  xs := AS_VECTOR(x)
  x1 := AS_VECTOR(x)
  x2 := AS_VECTOR(x)

  // length of gradient
  d := x.Dim()
  // gradient
  var g1 GRADIENT_TYPE
  var g2 GRADIENT_TYPE
  var g1_const CONST_GRADIENT_TYPE
  var g2_const CONST_GRADIENT_TYPE

  // allocate temporary memory
  if inSitu.T1 == nil {
    inSitu.T1 = NULL_VECTOR(d)
  }
  if inSitu.T2 == nil {
    inSitu.T2 = NULL_SCALAR()
  }
  // temporary variables
  t1 := inSitu.T1
  t2 := inSitu.T2
  // some constants
  t_n := float64(n)
  t_g := gamma.Value

  // sum of gradients
  s := NULL_VECTOR(d)
  var dict       []      GRADIENT_TYPE
  var dict_const []CONST_GRADIENT_TYPE
  // initialize s and d
  if f1 != nil {
    dict_const = make([]CONST_GRADIENT_TYPE, n)
    for i := 0; i < n; i++ {
      if _, w, g, err := f1(i, x1); err != nil {
        return nil, err
      } else {
        dict_const[i].set(w, g)
        dict_const[i].add(s)
      }
    }
  } else {
    dict := make([]GRADIENT_TYPE, n)
    for i := 0; i < n; i++ {
      if _, g, err := f2(i, x1); err != nil {
        return nil, err
      } else {
        dict[i].set(g)
        dict[i].add(s)
      }
    }
  }
  g := rand.New(rand.NewSource(seed.Value))
  y := CONST_SCALAR_TYPE(math.NaN())

  for epoch := 0; epoch < maxIterations.Value; epoch++ {
    if f1 != nil {
      for i_ := 0; i_ < n; i_++ {
        j := g.Intn(n)

        // get old gradient
        g1_const = dict_const[j]
        // evaluate objective function
        if y_, w, g, err := f1(j, x1); err != nil {
          return x1, err
        } else {
          y = y_
          g2_const.set(w, g)
        }

        gw1 := g1_const.w.GetValue()
        gw2 := g2_const.w.GetValue()
        c   := gw2 - gw1
        for i := 0; i < s.Dim(); i++ {
          s_i := s.ValueAt(i)
          g1i := g1_const.g.ValueAt(i)
          t1.AT(i).SetValue(t_g*(c*g1i + s_i/t_n))
        }

        if proxop != nil {
          t1.VSUBV(x1, t1)
          proxop(x2, t1, t2)
        } else {
          x2.VSUBV(x1, t1)
        }
        x1, x2 = x2, x1
        // update gradient avarage
        g1_const.sub(s)
        g2_const.add(s)

        // update dictionary
        dict_const[j].set(g2_const.w, g2_const.g)
      }
    } else {
      for i_ := 0; i_ < n; i_++ {
        j := g.Intn(n)

        // get old gradient
        g1 = dict[j]
        // evaluate objective function
        if y_, g, err := f2(j, x1); err != nil {
          return x1, err
        } else {
          y = y_
          g2.set(g)
        }

        for i := 0; i < s.Dim(); i++ {
          s_i := s.ValueAt(i)
          g1i := g1.g.ValueAt(i)
          g2i := g2.g.ValueAt(i)
          t1.AT(i).SetValue(t_g*(g2i - g1i + s_i/t_n))
        }

        if proxop != nil {
          t1.VSUBV(x1, t1)
          proxop(x2, t1, t2)
        } else {
          x2.VSUBV(x1, t1)
        }
        x1, x2 = x2, x1
        // update gradient avarage
        g1.sub(s)
        g2.add(s)

        // update dictionary
        dict[j].set(g2.g)
      }
    }
    // evaluate stopping criterion
    max_x     := 0.0
    max_delta := 0.0
    delta     := 0.0
    for it := xs.JOINT_ITERATOR_(x1); it.Ok(); it.Next() {
      s1, s2 := it.GET()
      v1, v2 := 0.0, 0.0
      if s1 != nil {
        v1 = s1.GetValue()
      }
      if s2 != nil {
        v2 = s2.GetValue()
      }
      if math.IsNaN(v2) {
        return x1, fmt.Errorf("NaN value detected")
      }
      max_x     = math.Max(max_x    , math.Abs(v2))
      max_delta = math.Max(max_delta, math.Abs(v2 - v1))
    }
    if max_x != 0.0 {
      delta = max_delta/max_x
    } else {
      delta = max_delta
    }
    // execute hook if available
    if hook.Value != nil && hook.Value(x1, ConstReal(delta), y, epoch) {
      break
    }
    if max_x != 0.0 && max_delta/max_x <= epsilon.Value*gamma.Value ||
      (max_x == 0.0 && max_delta == 0.0) {
      return x1, nil
    }
    xs.Set(x1)
  }
  return x1, nil
}
